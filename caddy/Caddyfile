{
  # Правильная подстановка переменных окружения в Caddy:
  # используем {$VAR}, а не {{env "VAR"}}
  email {$EMAIL}
}

# Редиректим www → apex, чтобы OAuth-редиректы совпадали
www.{$DOMAIN} {
  redir https://{$DOMAIN}{uri} 308
}

# Основной сайт
{$DOMAIN} {
  encode zstd gzip
  reverse_proxy web:3000
}
